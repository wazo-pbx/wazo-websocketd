[Unit]
Description=xivo-websocketd server
ConditionPathExists=!/var/lib/xivo/disabled
After=network.target rabbitmq-server.service xivo-auth.service
Wants=rabbitmq-server.service xivo-auth.service

[Service]
Type=simple
User=xivo-websocketd
Group=www-data
PermissionsStartOnly=yes
ExecStartPre=/usr/bin/install -d -o xivo-websocketd -g www-data /var/run/xivo-websocketd
ExecStart=/usr/bin/python3 -u /usr/bin/xivo-websocketd

[Install]
WantedBy=multi-user.target
