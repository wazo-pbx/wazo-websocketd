[Unit]
Description=wazo-websocketd server
ConditionPathExists=!/var/lib/wazo/disabled
After=network.target rabbitmq-server.service wazo-auth.service
Before=monit.service

[Service]
Type=forking
ExecStartPre=/usr/bin/install -d -o wazo-websocketd -g www-data /run/wazo-websocketd
ExecStartPre=/usr/bin/python3 -u /usr/bin/wazo-websocketd-init-amqp
ExecStart=/usr/bin/python3 -u /usr/bin/wazo-websocketd
PIDFile=/run/wazo-websocketd/wazo-websocketd.pid

[Install]
WantedBy=multi-user.target
